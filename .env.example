# Environment variables for Docker Compose
# Copy this file to .env and update with your values

# Database
DB_PASSWORD=your_secure_database_password_here

# Backend
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_256_bits

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend API URL (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# Production URLs (uncomment and update for production)
# FRONTEND_URL=https://app.infocurso.com
# NEXT_PUBLIC_API_URL=https://api.infocurso.com/api
